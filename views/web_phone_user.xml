<odoo>
  <data>
    <record id="view_web_phone_form" model="ir.ui.view">
      <field name="model">res.users</field>
      <field name="inherit_id" ref="base.view_users_form_simple_modif"/>
      <field name="arch" type="xml">
        <xpath expr="//group[3]" position="after">
          <group name="webphone" string="Web Phone">
            <group>
              <field name="web_phone_sip_user"/>
            </group>
            <group>
              <field name="web_phone_sip_secret" password="1"/>
            </group>
          </group>
        </xpath>
      </field>
    </record>
    <record id="admin_view_web_phone_form" model="ir.ui.view">
      <field name="model">res.users</field>
      <field name="inherit_id" ref="base.view_users_form"/>
      <field name="arch" type="xml">
        <group name="messaging" position="after">
          <group string="Web Phone">
            <group >
              <field name="web_phone_sip_user"/>
            </group>
            <group>
              <field name="web_phone_sip_secret" password="1"/>
            </group>
          </group>
        </group>
      </field>
    </record>
  </data>
</odoo>
